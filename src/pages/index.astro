---
import PageLayout from "@layouts/PageLayout.astro";
import { HOME } from "@consts";
import { photosByCountry } from "@data/photos";
import "@fancyapps/ui/dist/fancybox/fancybox.css";

// Get all photos for client-side randomization
const allPhotos = Object.values(photosByCountry).flatMap(country =>
  country.photos.map(photo => ({ ...photo, country: country.slug }))
);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <section class="justified-gallery" id="photoswipe">
    {
      allPhotos.slice(0, 20).map((photo, index) => {
        return (
          <a
            style="--width: 400; --height: 400;"
            href={photo.src}
            target="_blank"
            data-fancybox="gallery"
            data-photo={JSON.stringify(photo)}
          >
            <img
              src={photo.src}
              alt={photo.alt}
              loading={index < 12 ? "eager" : "lazy"}
            />
          </a>
        );
      })
    }
  </section>
</PageLayout>

<script define:vars={{ allPhotos }}>
  // Shuffle array using Fisher-Yates algorithm
  function shuffle(array) {
    const arr = [...array];
    for (let i = arr.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [arr[i], arr[j]] = [arr[j], arr[i]];
    }
    return arr;
  }

  // Function to randomize photos
  function randomizePhotos() {
    const gallery = document.getElementById('photoswipe');
    if (!gallery) return;

    const shuffled = shuffle(allPhotos).slice(0, 20);
    const links = gallery.querySelectorAll('a');

    links.forEach((link, index) => {
      if (shuffled[index]) {
        const photo = shuffled[index];
        const img = link.querySelector('img');
        if (img) {
          img.src = photo.src;
          img.alt = photo.alt;
        }
        link.href = photo.src;
      }
    });

    // Re-initialize Fancybox after changing photos
    if (typeof window.initFancybox === 'function') {
      window.initFancybox();
    }
  }

  // Function to setup title click handler
  function setupTitleClick() {
    const titleLink = document.querySelector('header a[href="/"]');
    if (titleLink) {
      titleLink.addEventListener('click', (e) => {
        // Only refresh if we're already on the home page
        if (window.location.pathname === '/' || window.location.pathname === '') {
          e.preventDefault();
          randomizePhotos();
          // Scroll to top smoothly
          window.scrollTo({ top: 0, behavior: 'smooth' });
        }
      });
    }
  }

  // Randomize photos on page load and after transitions
  document.addEventListener('DOMContentLoaded', () => {
    randomizePhotos();
    setupTitleClick();
  });

  // Also handle Astro page transitions
  document.addEventListener('astro:page-load', () => {
    randomizePhotos();
    setupTitleClick();
  });
</script>

<script>
  import { Fancybox } from "@fancyapps/ui";

  function initFancybox() {
    // Destroy existing instances first
    Fancybox.destroy();

    // Re-bind with fresh configuration
    Fancybox.bind("[data-fancybox]", {
      theme: "auto",
      mainStyle: {
        "--f-button-width": "44px",
        "--f-button-height": "44px",
        "--f-button-border-radius": "50%",
        "--f-toolbar-padding": "16px",
      },
      Carousel: {
        Arrows: false,
        Toolbar: {
          display: {
            left: [],
            middle: [],
            right: ["close"],
          },
        },
        transition: "slide",
      },
    });
  }

  // Make initFancybox available globally for randomization
  window.initFancybox = initFancybox;

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initFancybox);

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initFancybox);
</script>

<style>
  .justified-gallery {
    --padding: max(2.5vw, 12px);
    --space: max(2.5vw, 12px);
    --min-height: clamp(200px, 20vw, 400px);

    padding: var(--padding);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space);

    a {
      flex-grow: calc(var(--width) * (100000 / var(--height)));
      flex-basis: calc(var(--min-height) * (var(--width) / var(--height)));
      aspect-ratio: var(--width) / var(--height);
      overflow: hidden;
      opacity: 1;
      transition: all 0.05s ease-in-out;
    }

    a img {
      display: block;
      object-fit: contain;
      height: 100%;
      width: 100%;
    }

    a:focus-visible {
      outline: 3px solid var(--outline);
      outline-offset: 2px;
      transform: scale(1.05);
      z-index: 1;
      border-radius: 2px;
      box-shadow: 0 2px 4px 2px rgba(0, 0, 0, 0.1);
    }

    a.hidden {
      transition: opacity 0.4s ease-in-out;
      opacity: 0;
    }

    &::after {
      content: " ";
      flex-grow: 1000000000;
    }
  }
</style>
