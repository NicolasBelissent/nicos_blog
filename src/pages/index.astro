---
import PageLayout from "@layouts/PageLayout.astro";
import { HOME } from "@consts";
import { photosByCountry } from "@data/photos";
import "@fancyapps/ui/dist/fancybox/fancybox.css";

// Get all photos for client-side randomization
const allPhotos = Object.values(photosByCountry).flatMap(country =>
  country.photos.map(photo => ({ ...photo, country: country.slug }))
);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <section class="justified-gallery" id="photoswipe">
    {
      allPhotos.slice(0, 20).map((photo, index) => {
        return (
          <div
            style="--width: 400; --height: 400;"
            data-photo={JSON.stringify(photo)}
          >
            <img
              src={photo.src}
              alt={photo.alt}
              loading={index < 12 ? "eager" : "lazy"}
            />
          </div>
        );
      })
    }
  </section>
</PageLayout>

<script define:vars={{ allPhotos }}>
  // Shuffle array using Fisher-Yates algorithm
  function shuffle(array) {
    const arr = [...array];
    for (let i = arr.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [arr[i], arr[j]] = [arr[j], arr[i]];
    }
    return arr;
  }

  // Function to randomize photos
  function randomizePhotos() {
    const gallery = document.getElementById('photoswipe');
    if (!gallery) return;

    const shuffled = shuffle(allPhotos).slice(0, 20);
    const containers = gallery.querySelectorAll('div');

    containers.forEach((container, index) => {
      if (shuffled[index]) {
        const photo = shuffled[index];
        const img = container.querySelector('img');
        if (img) {
          img.src = photo.src;
          img.alt = photo.alt;
        }
      }
    });
  }

  // Function to setup title click handler
  function setupTitleClick() {
    const titleLink = document.querySelector('header a[href="/"]');
    if (titleLink) {
      titleLink.addEventListener('click', (e) => {
        // Only refresh if we're already on the home page
        if (window.location.pathname === '/' || window.location.pathname === '') {
          e.preventDefault();
          randomizePhotos();
          // Scroll to top smoothly
          window.scrollTo({ top: 0, behavior: 'smooth' });
        }
      });
    }
  }

  // Randomize photos on page load and after transitions
  document.addEventListener('DOMContentLoaded', () => {
    randomizePhotos();
    setupTitleClick();
  });

  // Also handle Astro page transitions
  document.addEventListener('astro:page-load', () => {
    randomizePhotos();
    setupTitleClick();
  });
</script>


<style>
  .justified-gallery {
    --padding: max(2.5vw, 12px);
    --space: max(2.5vw, 12px);
    --min-height: clamp(200px, 20vw, 400px);

    max-width: 1400px;
    margin: 0 auto;
    padding: var(--padding);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space);

    div {
      flex-grow: calc(var(--width) * (100000 / var(--height)));
      flex-basis: calc(var(--min-height) * (var(--width) / var(--height)));
      aspect-ratio: var(--width) / var(--height);
      overflow: hidden;
      opacity: 1;
      transition: all 0.05s ease-in-out;
    }

    div img {
      display: block;
      object-fit: contain;
      height: 100%;
      width: 100%;
    }

    div.hidden {
      transition: opacity 0.4s ease-in-out;
      opacity: 0;
    }

    &::after {
      content: " ";
      flex-grow: 1000000000;
    }
  }
</style>
